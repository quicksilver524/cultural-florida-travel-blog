<article class="post">
  <div class="title">
    <a href="/post/{{id}}">{{title}}</a><br/>
    <img height="500px" src="{{cover_url}}" width="50%">
      <br/>
      {{{post_body}}}
  </div>
  <div class="meta">
    Created by {{user.username}} on
    {{created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} comment(s)</a>| vote{{vote_count}} time(s)
  </div>
</article>